@page "/fetchdata"
@inject HttpClient Http

@if (catalog == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1>Catalog - V @catalog.Version</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in catalog.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><button type="button" class="btn btn-primary">Add</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Catalog catalog = new Catalog();

    protected override async Task OnInitializedAsync()
    {
        catalog = await Http.GetFromJsonAsync<Catalog>("/api/GetData");
    }
}
